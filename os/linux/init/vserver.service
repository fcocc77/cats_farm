[Unit]
Description=Service VinaRender Server
After=network.target

[Service]
Type=forking
User=root
Group=root
ExecStart=/bin/sh -c "{{path}}/os/linux/init/service.sh start vserver {{port}}"
ExecStop=/bin/sh -c "{{path}}/os/linux/init/service.sh stop vserver {{port}}"
Restart=always
TimeoutStartSec=0

[Install]
WantedBy=default.target
